			</ControlTemplate>

		<ControlTemplate x:Key="ScalesTemplate" >
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="1*" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="1*" />
					<RowDefinition Height="0.2*" />
				</Grid.RowDefinitions>

				<TextBlock Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" >
					<TextBlock.Style>
						<Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource VersusHeader}">
							<Setter Property="Text" Value="{Binding Player.FullName, StringFormat='{}{0} please stand still on the scales...'}" />
							<Style.Triggers>
								<DataTrigger Binding="{Binding NumPlayers}" Value="1">
									<Setter Property="Text" Value="Please stand still on the scales..." />
								</DataTrigger>
							</Style.Triggers>
						</Style>
					</TextBlock.Style>
				</TextBlock>

				<Image Grid.Row="4" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Height="200" Visibility="{Binding ValidWeight, Converter={StaticResource BooleanToHiddenConverter}}" />

			</Grid>
		</ControlTemplate>

	</UserControl.Resources>

	<ContentControl>
		<ContentControl.Style>
			<Style TargetType="{x:Type ContentControl}">
				<Style.Triggers>
					<DataTrigger Binding="{Binding WeighMode}" Value="{x:Static local:WeighMode.Scales}">
						<Setter Property="Template" Value="{StaticResource ScalesTemplate}" />
					</DataTrigger>
					<DataTrigger Binding="{Binding WeighMode}" Value="{x:Static local:WeighMode.Manual}">
						<Setter Property="Template" Value="{StaticResource ManualTemplate}" />
					</DataTrigger>
				</Style.Triggers>
			</Style>
		</ContentControl.Style>
	</ContentControl>

</UserControl>
