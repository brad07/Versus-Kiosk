<Window x:Class="VersusKiosk.UI.Pages.StationActionView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Station Actions" Height="700" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" UseLayoutRounding="True" >

	<Window.Resources>

		<Style TargetType="{x:Type Button}" BasedOn="{StaticResource {x:Type Button}}" >
			<Setter Property="Width" Value="300" />
			<Setter Property="Height" Value="80" />
			<Setter Property="Effect">
				<Setter.Value>
					<DropShadowEffect />
				</Setter.Value>
			</Setter>
		</Style>

	</Window.Resources>

	<StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" >
		<Button Content="Restart" Command="{Binding Path=RestartCommand}"  />
		<Button Content="Reboot" Command="{Binding Path=RebootCommand}"  />
		<Button Content="Enable" Command="{Binding Path=EnableCommand}"  />
		<Button Content="Disable" Command="{Binding Path=DisableCommand}"  />
		<Button Content="Stop Session" Command="{Binding Path=StopSessionCommand}"  />
		<Button Content="Close" Command="{Binding Path=CloseCommand}" Margin="0,50,0,0" />
	</StackPanel>
</Window>

	